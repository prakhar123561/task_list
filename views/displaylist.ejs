<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Todo</title>
    <script src="/javascripts/checkbox.js"></script>
    <script src="/javascripts/texthide.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/dropdown.js"></script>
    
</head>
<body>
 
<% if(view) { %>
    <div id="day">
        <h1><%= kindofday %></h1>
    </div>
    <div id="title">
        <h2>Todo List</h2>
    </div>

    
    
    <form action="/todo/todo_delete" method="post">
        <input type="hidden" name="todoid" value="<%= data.todoid %>">
    <div class="list">
        <% data.map((item) => { %>
        
            <span style="margin-top: 5px;">
                <input type="checkbox" class="check" name="todoid" value="<%= item.todoid %>">
                <%= item.todoitem %>
            </span>
        <% }) %>
        <input type="submit" value="Delete Selected" id="deleteButton" style="display: none;">
       
    </div>
</form>


 
    <form action="/todo/todo_add" method="post">
      
        <select class="form-select" id="typeid" name="typeid" >
            <option selected>All List</option>
        </select>
        <div class="type">
            <button type="button" id="showInputButton">+</button>
            <div id="addItemContainer" style="display: none;">
            <input type="text" name="newitem" id="newitem" placeholder="New Item" autocomplete="off">
            <input type="submit" value="Add" style="margin-left: 3px;">
            <audio id="deleteSound" src="/audio/remove.mp3"></audio>
        </div>
    </div>
    </form>
    <a href="/todo/type_list"><input type="button" value="SEE"></a>
<% } %>
</body>
</html>


